<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/person_details_vertical_pad">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/person_details_vertical_pad"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:layout_gravity="center_vertical"
                android:text="Morale: "/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/personDetailsMorale"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:text="4"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/emoMorale"
                android:src="@drawable/ic_action_add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/person_details_vertical_pad"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:text="Humour: "/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/personDetailsHumour"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:text="2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/emoHumour"
                android:src="@drawable/ic_action_add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/person_details_vertical_pad"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:text="Skill: "/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/personDetailsSkill"
                android:textSize="@dimen/person_details_text_size"
                android:textColor="@color/custom_dark_grey"
                android:text="10"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/emoSkill"
                android:src="@drawable/ic_action_add"/>
        </LinearLayout>

</LinearLayout>